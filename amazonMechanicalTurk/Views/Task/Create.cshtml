@model amazonMechanicalTurk.Models.JobInfo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        $("#usability").click(function () {
            $("#translation").hide();
            $("#image").hide();
            $("#question").show();
        });
        $("#translations").click(function () {
            $("#translation").show();
            $("#image").hide();
            $("#question").hide();
        });
        $("#recognition").click(function () {
            $("#translation").hide();
            $("#image").show();
            $("#question").hide();
        });
    });
</script>
