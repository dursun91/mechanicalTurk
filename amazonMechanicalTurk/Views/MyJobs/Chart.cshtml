
@{
    ViewBag.Title = "Chart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chart</h2>

@{
    var myChart = new Chart(width: 600, height: 400)
       .AddTitle("Search Difficulty")
       .AddSeries(chartType: "column",
          xValue: new[] { "Easy", "Hard", "impossible"},
          yValues: new[] { "4", "1", "0"})
       .Write();
}
